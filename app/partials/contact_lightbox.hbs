<div id="contactLightbox" class="lightbox">
    <h3>Get in contact</h3>
    <form class="sendingContactMessage" method="post">
        <div id="success"></div>
        <div id="errors">
        </div>
        <label>Name</label>
        <input type="text" name="from_name" tabindex="1" />
        <label>Email</label>
        <input type="text" name="from_email" tabindex="2" />
        <label>How can we help?</label>
        <textarea name="message" rows="8" tabindex="3"></textarea>
        
        <script src="http://www.google.com/recaptcha/api.js"></script>
        <div class="g-recaptcha" data-sitekey="6Lfj4AwUAAAAAIiUpEnxauXlknxDVYWS_dbWYxCg"></div>
        <button class="cta-bold cta-green cta-block call-to-action">
            Send
        </button>
    </form>
</div>